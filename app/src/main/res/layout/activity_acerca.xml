<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Acerca">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#030365"
            android:longClickable="false"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:logo="@drawable/logo"
            app:title="Motopedia"
            app:titleMarginStart="40dp"
            app:titleTextColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿De que trata la aplicación?"
                android:textAlignment="center"
                android:textColor="#0544E6"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="La app  contiene secciones donde incluye información sobre la aplicación. Además, cuenta con una sección de medio ambiente relacionada con los Objetivos de Desarrollo Sostenible (ODS) publicados por la Organización de las Naciones Unidas (ONU), específicamente los objetivos 12 y 13. También dispone de un apartado de información para los usuarios acerca de los modelos de motocicletas que incluye, proporcionando información importante sobre los componentes de las motocicletas, mantenimiento preventivo, manejo de desechos al concluir el mantenimiento y ubicación de centros de distribución autorizados a los que pueden acudir."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Aplicación desarrollada por los estudiantes del Centro Universitario de Tonalá de la carrera de Ingeniería de Ciencias Computacionales del octavo semestre"
                android:textAlignment="textStart"
                android:textColor="#021891"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>